                // Beispiel f√ºr eine API-Anfrage an einen freien Chatbot (z. B. OpenAI oder ein anderes API)
                fetch('https://api.openai.com/v1/completions', {
                  method: 'POST',
                  headers: {
                    'Content-Type': 'application/json',
                    'Authorization': 'Bearer YOUR_API_KEY' // Ersetze 'YOUR_API_KEY' mit deinem API-Schl√ºssel
                  },
                  body: JSON.stringify({
                    model: 'text-davinci-003',  // Ersetze durch das Modell deiner Wahl
                    prompt: 'Nenne mir ein einziges kreatives, veganes, nicht rassistisches und sinnvolles deutsches Stichwort f√ºr ein 3D-Druck-Projekt. Es darf nichts mit Vasen, Skulpturen, Schmuck, Lampen oder Schl√ºsseln zu tun haben. Gib nur ein einzelnes Wort ohne Satz und ohne Anf√ºhrungszeichen zur√ºck.',
                    max_tokens: 10
                  })
                })
                .then(response => response.json())
                .then(data => {
                  ideSpan.textContent = data.choices[0].text.trim();  // Text aus der API-Antwort verwenden
                  hiddenInput.value = data.choices[0].text.trim();   // Wert f√ºr das versteckte Input-Feld setzen
                })
                .catch(error => {
                  console.error('Error:', error);
                  ideSpan.textContent = 'Fehler beim Abrufen der Inspiration';
